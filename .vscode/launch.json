{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "render",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/render.exe",  // Path to render.exe
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",  // Set working directory
        "environment": [],
        "externalConsole": true,  // Set to true if you want a separate console window
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",  // Adjust this to your actual gdb path
        "logging": {
          "trace": true,
          "traceResponse": true
        }
      }
    ]
  }
  